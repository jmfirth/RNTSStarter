{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node"
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "react",
        "react-native",
        "redux-actions",
        "core-js"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules"
    ],
    "compileOnSave": false
}
